rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User profile avatars
    match /avatars/{userId}/{fileName} {
      // Users can read their own avatar
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can upload their own avatar with restrictions
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Images only
    }

    // Voice notes for check-ins
    match /voice_notes/{userId}/{fileName} {
      // Users can read their own voice notes
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can upload their own voice notes with restrictions
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('audio/.*');  // Audio only
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
