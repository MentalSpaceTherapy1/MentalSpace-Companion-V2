{
  "expo": {
    "name": "MentalSpace",
    "slug": "mentalspace-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "mentalspace",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#38B6E0"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mentalspace.companion",
      "buildNumber": "1",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone to record voice notes for your journal entries.",
        "NSFaceIDUsageDescription": "Use Face ID to quickly and securely access your MentalSpace account.",
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized wellness recommendations.",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "UIApplicationShortcutItems": [
          {
            "UIApplicationShortcutItemType": "com.mentalspace.companion.checkin",
            "UIApplicationShortcutItemTitle": "Check-in Now",
            "UIApplicationShortcutItemSubtitle": "Start your daily check-in",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypeAdd"
          },
          {
            "UIApplicationShortcutItemType": "com.mentalspace.companion.journal",
            "UIApplicationShortcutItemTitle": "New Journal Entry",
            "UIApplicationShortcutItemSubtitle": "Write in your journal",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypeCompose"
          },
          {
            "UIApplicationShortcutItemType": "com.mentalspace.companion.sos",
            "UIApplicationShortcutItemTitle": "Get Help",
            "UIApplicationShortcutItemSubtitle": "Access crisis resources",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypeLove"
          }
        ]
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.security.application-groups": [
          "group.com.mentalspace.companion"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#38B6E0"
      },
      "package": "com.mentalspace.companion",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "googleServicesFile": "./google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "mentalspace",
              "host": "*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          }
        }
      ],
      ["expo-router", { "root": "app" }],
      "expo-font",
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#38B6E0",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#38B6E0",
          "image": "./assets/splash.png",
          "imageWidth": 200
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3ee535e3-3dcd-4420-98c8-79b52bc90535"
      }
    },
    "owner": "lelejoseli"
  }
}
