    android:shortcutDisabledMessage="@string/shortcut_disabled">
    <intent
      android:action="android.intent.action.VIEW"
      android:targetPackage="com.mentalspace.companion"
      android:targetClass="com.mentalspace.companion.MainActivity"
      android:data="mentalspace://journal" />
    <categories android:name="android.shortcut.conversation" />
  </shortcut>

  <!-- Sleep Tracker Shortcut -->
  <shortcut
    android:shortcutId="sleep"
    android:enabled="true"
    android:icon="@drawable/ic_shortcut_sleep"
    android:shortcutShortLabel="@string/shortcut_sleep_short"
    android:shortcutLongLabel="@string/shortcut_sleep_long"
    android:shortcutDisabledMessage="@string/shortcut_disabled">
    <intent
      android:action="android.intent.action.VIEW"
      android:targetPackage="com.mentalspace.companion"
      android:targetClass="com.mentalspace.companion.MainActivity"
      android:data="mentalspace://sleep" />
    <categories android:name="android.shortcut.conversation" />
  </shortcut>

  <!-- SOS / Get Help Shortcut -->
  <shortcut
    android:shortcutId="sos"
    android:enabled="true"
    android:icon="@drawable/ic_shortcut_sos"
    android:shortcutShortLabel="@string/shortcut_sos_short"
    android:shortcutLongLabel="@string/shortcut_sos_long"
    android:shortcutDisabledMessage="@string/shortcut_disabled">
    <intent
      android:action="android.intent.action.VIEW"
